@model SimpleCMS.Models.Blog.ImageInfo
@{
    var imgSrc = "data:image/jpeg;base64," + Convert.ToBase64String(Model.File.Data);
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1>@Model.Description</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <img src="@imgSrc" class="img-responsive" />
        </div>
    </div>
</div>
<br />